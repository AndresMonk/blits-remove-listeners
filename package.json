  "license": "Apache-2",
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "c8": "^7.12.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "esm": "^3.2.25",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.3",
    "prettier": "^2.5.1",
    "tap-diff": "^0.1.1",
    "tape": "^5.5.0"
  }
